<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgTrailer"
        android:layout_width="@dimen/imgTrailerW"
        android:layout_height="@dimen/imgTrailerH"
        android:adjustViewBounds="true"
        android:elevation="@dimen/margin_vsmall"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/txtTrailer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imgTrailerH"
        android:layout_toEndOf="@+id/imgTrailer"
        android:gravity="start|center_vertical"
        android:paddingEnd="@dimen/margin_small"
        android:paddingStart="@dimen/margin_small"
        android:textColor="@color/white"
        android:textSize="@dimen/font_xlarge"/>

    <View
        android:id="@+id/separatorTrailer"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/txtTrailer"
        android:layout_margin="@dimen/margin_vsmall"
        android:layout_marginTop="@dimen/margin_vsmall"
        android:background="@color/colorAccentOpacity30"/>

</RelativeLayout>