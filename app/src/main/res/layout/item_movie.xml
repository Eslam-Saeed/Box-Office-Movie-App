<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:padding="@dimen/margin_vsmall">

        <ImageView
            android:id="@+id/imgMoviePoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/imgMoviePoster"
            android:layout_alignEnd="@id/imgMoviePoster"
            android:layout_alignStart="@id/imgMoviePoster"
            android:layout_alignTop="@id/imgMoviePoster"
            android:background="@drawable/scrim_gradiant"/>

        <TextView
            android:id="@+id/txtMovieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgMoviePoster"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/margin_vsmall"
            android:ellipsize="end"
            android:inputType="text"
            android:maxLines="1"
            android:textAlignment="viewStart"
            android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>